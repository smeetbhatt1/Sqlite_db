<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context="com.example.smeetbhatt.database1.CreateActivity">

    <EditText
        android:layout_width="300dp"
        android:hint="Add new Fruit"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:id="@+id/addFruitET"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/addFruitET"
        android:id="@+id/addFruitBTN"
        android:onClick="setAddFruitBTN"
        android:text="ADD"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/displayAckTV"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/addFruitBTN"/>


</RelativeLayout>
